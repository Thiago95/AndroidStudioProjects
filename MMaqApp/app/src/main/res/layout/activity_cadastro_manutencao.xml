<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.theagobueno.mmaqapp.Controller.CadastroMaquinarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewCadCodMaquinario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/edtCadTipoManut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de manuteção: ex. troca de óleo"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/edtCadDataAtualManutencao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data atual da manutenção"
                android:inputType="date" />

            <EditText
                android:id="@+id/edtCadDataProximaManutencao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data próxima manutenção"
                android:inputType="date" />

            <EditText
                android:id="@+id/edtCadValorManutencao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor da Manutenção"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtCadDescricaoManutencao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Descrição da manutenção"
                android:inputType="textLongMessage" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>

