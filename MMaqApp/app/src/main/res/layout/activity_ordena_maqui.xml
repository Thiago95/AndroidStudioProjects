<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >

    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Selecione a ordem desejada para gerar o relatório"
        />

    <Button
        android:id="@+id/opcUm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/colorButton"
        android:text="Ordenar por Marca"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/opcDois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opcUm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:text="Ordenar por Modelo"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />
    <Button
        android:id="@+id/opcTres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opcDois"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:text="Ordenar por Data da Compra"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/opcQuatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opcTres"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:elegantTextHeight="false"
        android:text="Ordenar por Preço da Compra"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />



</RelativeLayout>
