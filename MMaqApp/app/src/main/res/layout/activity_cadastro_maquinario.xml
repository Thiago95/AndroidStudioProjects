<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.theagobueno.mmaqapp.Controller.CadastroMaquinarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtCadMaqMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/edtCadMaqModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modelo"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/edtCadMaqTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de Maquina, ex. 'Trator de Esteira'"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/edtCadMaqPotencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PotÃªncia"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/edtCadMaqValorAquisicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor da Compra"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/edtCadMaqDataAquisicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data da Compra"
                android:onClick="showDatePickerDialog" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
