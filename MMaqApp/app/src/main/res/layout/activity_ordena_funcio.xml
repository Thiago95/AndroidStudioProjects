<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >

    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Selecione a ordem desejada para gerar o relatório"
        />

    <Button
        android:id="@+id/opcCinco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorButton"
        android:text="Ordenar por Nome"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/opcSeis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opcCinco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:text="Ordenar por Data da Admissão"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />
    <Button
        android:id="@+id/opcSete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opcSeis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:text="Ordenar por E-mail"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/opcOito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opcSete"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:elegantTextHeight="false"
        android:text="Ordenar por CNH"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/opcNove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opcOito"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorButton"
        android:elegantTextHeight="false"
        android:text="Ordenar por CPF"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />



</RelativeLayout>
